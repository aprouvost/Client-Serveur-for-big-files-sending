#! /usr/bin/python3

import sys
sys.path.append("..")

import src
import argparse


if __name__ == '__main__':
    parser = argparse.ArgumentParser()
    parser.add_argument("port", help="Server public port", type=int)
    parser.add_argument("--RTT", help="RTT", type=int)
    parser.add_argument("--window", help="window", type=int)
    args = parser.parse_args()

    if args.RTT:
        RTT = args.RTT
    else:
        RTT = 0.06
    if args.window:
        WINDOW = args.window
    else:
        WINDOW = 100

    src.mainThread(args.port, RTT, WINDOW)
